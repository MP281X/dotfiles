{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "share": "disabled",
  "autoupdate": true,

  "small_model": "opencode/gpt-5-nano",

  "mode": {
    "plan": { "model": "github-copilot/gpt-5.2" },
    "build": { "model": "opencode/kimi-k2.5-free" }
  },

  "agent": {
    "compaction": { "model": "opencode/gpt-5-nano" },
    "general": { "model": "github-copilot/gpt-5-mini" },
    "explore": { "model": "github-copilot/grok-code-fast-1" }
  },

  "tools": {
    "lsp": true,
    "question": true
  },

  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "-y", "@upstash/context7-mcp"]
    }
  },

  "permission": {
    "bash": {
      "*": "allow",
      "npm *": "deny",
      "gh *": "ask",
      "git *": "ask",
      "git *log*": "allow",
      "git *diff*": "allow",
      "git *show*": "allow",
      "git *status*": "allow",
      "git *rev-parse*": "allow"
    }
  },

  "lsp": { "eslint": { "disabled": true } }
}
