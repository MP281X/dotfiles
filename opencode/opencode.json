{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
	"share": "disabled",
	"autoupdate": true,

	"small_model": "opencode/big-pickle",

	"mode": {
		"plan": { "model": "github-copilot/claude-opus-4.5" },
		"build": { "model": "github-copilot/claude-sonnet-4.5" }
	},

	"agent": {
		"explore": { "model": "opencode/grok-code" },
		"compaction": { "model": "opencode/gpt-5-nano" },
		"general": { "model": "github-copilot/claude-haiku-4.5" }
	},

	"mcp": {
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp@latest"]
		},
		"grep_app": {
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"shadcn": {
			"type": "local",
			"command": ["npx", "-y", "shadcn@latest", "mcp"]
		}
	},

	"tools": {
		"shadcn*": false,
		"context7*": false,
		"grep_app*": false
	},

	"permission": {
		"bash": {
			"*": "allow",
			"gh *": "deny",
			"npm *": "deny",
			"git *": "deny",
			"git push*": "ask",
			"git commit*": "ask",
			"git ammend*": "ask",
			"git pull*": "allow",
			"git diff*": "allow",
			"git status*": "allow"
		}
	},

	"lsp": {
		"eslint": { "disabled": true }
	}
}
