{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "share": "disabled",
  "autoupdate": true,

  "small_model": "opencode/gpt-5-nano",

  "mode": {
    "plan": { "model": "github-copilot/gpt-5.2", "disable": true },
    "build": { "model": "opencode/kimi-k2.5-free" }
  },

  "agent": {
    "compaction": { "model": "opencode/gpt-5-nano" },
    "explore": { "model": "github-copilot/grok-code-fast-1" },
    "general": { "model": "github-copilot/gpt-5-mini", "disable": true },
  },

  "tools": { "question": true, "codesearch": false },

  "mcp": {
    "btca": {
			"type": "local",
      "timeout": 600000,
			"command": ["bunx", "btca", "mcp"]
		}
  },

  "permission": {
    "bash": {
      "*": "allow",
      "npm *": "deny",
      "gh *": "ask",
      "git *": "ask",
      "git *log*": "allow",
      "git *diff*": "allow",
      "git *show*": "allow",
      "git *status*": "allow",
      "git *rev-parse*": "allow"
    }
  },

  "lsp": { 
    "lua": { "disabled": true }
  }
}
