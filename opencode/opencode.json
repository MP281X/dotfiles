{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
	"autoshare": false,
	"autoupdate": true,

	"small_model": "zai-coding-plan/glm-4.7",
	"mode": {
		"plan": { "model": "github-copilot/claude-opus-4.5" },
		"build": { "model": "zai-coding-plan/glm-4.7" }
	},
	"agent": {
		"explore": {
			"model": "github-copilot/claude-haiku-4.5",
			"maxSteps": 8,
			"temperature": 0.1,
			"tools": { "task": false, "webfetch": false },
			"permission": {
				"external_directory": "allow",
				"bash": {
					"*": "deny",
					"ls *": "allow",
					"jq *": "allow",
					"rg *": "allow",
					"wc *": "allow",
					"cp *": "allow",
					"cat *": "allow",
					"uniq *": "allow",
					"head *": "allow",
					"echo *": "allow",
					"sort *": "allow",
					"tree *": "allow",
					"find *": "allow",
					"grep *": "allow",
					"test *": "allow",
					"xargs *": "allow",
					"basename *": "allow"
				}
			}
		}
	},

	"lsp": {
		"eslint": { "disabled": true }
	}
}
