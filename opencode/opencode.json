{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
	"mode": {
		"plan": { "model": "zai-coding-plan/glm-4.5" },
		"build": { "model": "zai-coding-plan/glm-4.5" }
	},
	"autoshare": false,
	"autoupdate": true,
	"mcp": {
		"effect": {
			"type": "local",
			"command": ["npx", "-y", "effect-mcp"]
		},
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp"]
		},
		"grep": {
			"type": "remote",
			"url": "https://mcp.grep.app"
		}
	}
}
