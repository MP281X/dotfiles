{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
	"share": "disabled",
	"autoupdate": true,

	"small_model": "opencode/gpt-5-nano",

	"mode": {
		"plan": { "model": "github-copilot/gpt-5.2-codex" },
		"build": { "model": "github-copilot/gpt-5.2-codex" }
	},

	"agent": {
		"explore": { "model": "opencode/grok-code" },
		"compaction": { "model": "opencode/gpt-5-nano" },
		"general": { "model": "github-copilot/claude-haiku-4.5" }
	},

	"tools": {
    "lsp": true,
		"question": true
	},

	"permission": {
		"bash": {
			"*": "allow",
      "npm *": "deny",

      "gh *": "ask",
      "git *": "ask",
			"git *log*": "allow",
      "git *diff*": "allow",
			"git *show*": "allow",
      "git *status*": "allow",
			"git *rev-parse*": "allow",
		}
	},

	"lsp": {
		"eslint": { "disabled": true }
	}
}
