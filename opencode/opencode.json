{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
	"autoshare": false,
	"autoupdate": true,

	"default_agent": "orchestrator",
	"small_model": "opencode/grok-code",
	"agent": {
		"orchestrator": { "mode": "primary" },
		"plan": { "enabled": false }
	},
	"mode": {
		"plan": { "model": "github-copilot/claude-opus-4.5" },
		"build": { "model": "opencode/glm-4.7-free" }
	},

	"mcp": {
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp@latest"]
		},
		"grep_app": {
			"type": "remote",
			"url": "https://mcp.grep.app"
		}
	},

	"tools": {
		"context7*": false,
		"grep_app*": false
	},

	"lsp": {
		"eslint": { "disabled": true }
	}
}
