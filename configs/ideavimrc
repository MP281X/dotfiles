" remap space
let mapleader = " "
nnoremap <Space> <NOP>

" remove search highlight
nnoremap <ESC> :nohlsearch<CR> 

" delete without copying
nnoremap d "_d
vnoremap d "_d
nnoremap c "_c

" movement
nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz
nnoremap n nzzzv
nnoremap N Nzzzv

" buffer
nnoremap <C-\> :bd<CR>
nnoremap >> :bp<CR>
nnoremap << :bn<CR>

" telescope equivalent
nnoremap <leader>sf :action GotoFile<CR>
nnoremap <leader>sc :action FindInPath<CR>
nnoremap <leader>sb :action RecentFiles<CR>
nnoremap <leader>fb :NERDTreeToggle<CR>

" lsp
nnoremap <leader>gd :action GotoDeclaration<CR>
nnoremap E :action ShowErrorDescription<CR>
nnoremap <leader>sa :action ShowIntentionActions<CR>
nnoremap R :action RenameElement<CR>

nnoremap <Leader>t :action Run<CR>

" disable mouse
set mouse=

" scroll offset
set scrolloff=15

" tabs and indentation
set noexpandtab
set autoindent
set smartindent

" search settings
set ignorecase
set smartcase
set hlsearch
set incsearch

" backspace settings
set backspace=indent,eol,start

" clipboard
set clipboard=unnamedplus

" decrease update time
set updatetime=50
set timeoutlen=300

" simplify the configuration of the keybinds for the file browser
set NERDTree
