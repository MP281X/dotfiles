{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "share": "disabled",
  "autoupdate": true,

  "small_model": "opencode/gpt-5-nano",

  "mode": {
    "plan": { "disable": true },
    "build": { "model": "github-copilot/gpt-5.2-codex" }
  },

  "agent": {
    "general": { "disable": true },
    "compaction": { "model": "opencode/gpt-5-nano" },
    "explore": { "model": "github-copilot/gpt-5-mini" }
  },

  "tools": { "question": true, "codesearch": false },

  "permission": {
    "bash": {
      "*": "allow",
      "npm *": "deny",
      "gh *": "ask",
      "git *": "ask",
      "git *log*": "allow",
      "git *diff*": "allow",
      "git *show*": "allow",
      "git *status*": "allow",
      "git *rev-parse*": "allow"
    }
  },

  "provider": {
		"github-copilot": {
			"models": {
				"gpt-5-mini": { "limit": { "context": 192000, "output": 64000 } },
				"gpt-5.2-codex": { "limit": { "context": 400000, "output": 128000 } },
				"claude-opus-4.6": { "limit": { "context": 192000, "output": 64000 } },
        "claude-sonnet-4.6": { "limit": { "context": 200000, "output": 32000 } }
			}
		}
	},


  "lsp": { 
    "lua": { "disabled": true }
  }
}
