{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
	"share": "disabled",
	"autoupdate": true,

	"small_model": "opencode/big-pickle",

	"mode": {
		"plan": { "model": "github-copilot/claude-opus-4.5", "disable": true },
		"build": { "model": "opencode/glm-4.7-free" }
	},

	"agent": {
		"general": { "model": "minimax-m2.1-free" },
		"explore": { "model": "opencode/grok-code" },
		"compaction": { "model": "opencode/gpt-5-nano" }
	},

	"mcp": {
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp@latest"]
		},
		"grep_app": {
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"shadcn": {
			"type": "local",
			"command": ["npx", "-y", "shadcn@latest", "mcp"]
		}
	},

	"tools": {
		"context7*": false,
		"grep_app*": false,
		"shadcn*": false
	},

	"lsp": {
		"eslint": { "disabled": true }
	}
}
