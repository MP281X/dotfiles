{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
	"share": "disabled",
	"autoupdate": true,

	"small_model": "opencode/big-pickle",

	"mode": {
		"plan": { "model": "github-copilot/claude-opus-4.5" },
		"build": { "model": "github-copilot/claude-sonnet-4.5" }
	},

	"agent": {
		"explore": { "model": "opencode/grok-code" },
		"compaction": { "model": "opencode/gpt-5-nano" },
		"general": { "model": "github-copilot/claude-haiku-4.5" }
	},

	"tools": {
		"context7*": false,
		"grep_app*": false,
		"chrome-devtools*": false
	},

	"permission": {
		"bash": {
			"*": "allow",
			"gh *": "deny",
			"npm *": "deny",
			"git *": "deny",
			"git push*": "ask",
			"git commit*": "ask",
			"git ammend*": "ask",
			"git log*": "allow",
			"git show*": "allow",
			"git pull*": "allow",
			"git diff*": "allow",
			"git status*": "allow"
		}
	},

	"lsp": {
		"eslint": { "disabled": true }
	}
}
