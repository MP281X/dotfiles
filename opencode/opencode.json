{
	"$schema": "https://opencode.ai/config.json",
	"theme": "kanagawa",
  "autoshare": false,
  "autoupdate": true,

	"mode": {
		"plan": { "model": "zai-coding-plan/glm-4.6" },
		"build": { "model": "zai-coding-plan/glm-4.6" }
	},

	"mcp": {
    "shadcn": {
      "type": "local",
      "command": ["npx", "-y", "shadcn@latest", "mcp"]
    },
		"effect": {
			"type": "local",
			"command": ["npx", "-y", "effect-mcp@latest"]
		},
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp@latest"]
		},
		"grep": {
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
    "perplexity": {
      "type": "local",
      "command": ["npx", "-y", "server-perplexity-ask"],
      "environment": {
        "PERPLEXITY_API_KEY": ""
      }
    }
	},

  "tools": {
    "grep*": false,
    "webfetch": false,
    "context7*": false
  }
}
